<h1>New User</h1>

<%= render 'form' %>

<h1>Log In</h1>
<p id="notice"><%= notice %></p>
<%= form_tag log_in_users_path do %>
  <div class="field">
    <%= label_tag :email %><br />
    <%= text_field_tag :email, params[:email] %>
  </div>
  <div class="field">
    <%= label_tag :password %><br />
    <%= password_field_tag :password %>
  </div>
  <div class="actions">
    <%= submit_tag "Log In" %>
  </div>
<% end %>

<%= link_to 'Back', users_path %>
